<!DOCTYPE html>
<html lang="en" id="index">
  <% include ./partials/_header %>
  <body class="index">
    <% include ./partials/_nav %>
    <div class="form col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <div id="prescriptions-header">
      <% if (user.isDoctor === true) { %>
        <h3>Your patients</h3>
      <% } else { %>
        <h3>Your doctors</h3>
      <% } %>
      </div>
      <ul class="list-group">
      <% if (usersList.length != 0) { %>
        <% for (let i = usersList.length - 1; i >= 0; i--) { %>
          <a href=<%=`users/${usersList[i].id}`%> class="list-group-item">
            <li class="list-group-item">
              <p><%=`${usersList[i].first_name} ${usersList[i].last_name}`%></p>
            <% if (user.isDoctor === true) { %>
              <p><span class="badge"><%=`ID: ${usersList[i].id}`%></span></p>
            <% } else { %>
              <p><%=`${usersList[i].speciality}`%></p>
              <p><%=`Permit #${usersList[i].permit_number}`%></p>
            <% } %>
            </li>
          </a>
        <% } %>
      <% } else { %>
        <% if (user.isDoctor === true) { %>
          <li class="list-group-item">Your currently have no patients</li>
        <% } else { %>
          <li class="list-group-item">Your currently have no doctors</li>
        <% } %>
      <% } %>
      </ul>
    </div>
  </body>
</html>
